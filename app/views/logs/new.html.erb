<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <h1>Checkout an item</h1>
         <form class="" action="<%= logs_path %>" method="POST">

            <div class="form-group">
              <label for="item_id">Choose an item</label>
            	<select name="log[item_id]" class="form-control">
            		 <% @items.each do |item| %>
                  <%if item.current == nil %>
            	     <option value="<%=item.id%>"><%= "#{item.id} - #{item.description}" %></option>
                  <%end%>
            	  <%end%>
            	</select>
            </div>

            <div class="form-group">
              <label for="borrower_id">Borrower</label>
              <select name="log[borrower_id]" class="form-control">
                 <% @borrowers.each do |user| %>
                   <option value="<%=user.id%>"><%= user.name %></option>
                <%end%>
              </select>
            </div>

            <!-- <div class="form-group">
              <label for="due_date">Due Date</label>

              <input type="date" name="log[due_date]" >
            </div> -->
            <div class="form-group">
              <input id="due_date" name="log[due_date]" type="date" />
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary largeBtn" value="Checkout">
            </div>

            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      </form>

    </div>
  </div>
</div>



   






