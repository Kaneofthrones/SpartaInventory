<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Log id</th>
          <th>Lender</th>
          <th>Borrower</th>
          <th>Item</th>
          <th>Date Taken</th>
          <th>Due date</th>
          <th>Date Returned</th>
        </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= @log.id %></td>
            <td><%= User.find(@log.lender_id).name %></td>
            <td><%= User.find(@log.borrower_id).name %></td>
            <td><%= @log.item.description %></td>
            <td><%= @log.created_at %></td>
            <td><%= @log.due_date %></td>
            <td><%= @log.return_date %></td>
          </tr>
        </tbody>
      </table>

      <a class="btn btn-success largeBtn" href="<%= logs_path %>" role="button">Back to logs</a>
    </div>
  </div>
</div>



  




